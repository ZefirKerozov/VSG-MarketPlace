<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Error"
      internalLogFile="internalLog.txt"
	  internalLogToConsole="true">
	<targets>
		<target xsi:type="Database" name="database">
			<connectionString>data source=auto;Initial catalog=MarketPlaceZefir;user=LVAccount;password=cluemt**1!;</connectionString>
			<commandText>INSERT INTO Log(CreatedOn,Message,Level,StackTrace) VALUES (@datetime,@msg,@level,@trace)</commandText>
			<parameter name="@datetime" layout="${date}" />
			<parameter name="@msg" layout="${message}" />
			<parameter name="@level" layout="${level}" />
			<parameter name="@trace" layout="${stacktrace}" />
		</target>
	</targets>

	<rules>
		<logger name="*" minlevel="Error" writeTo="database" />
	</rules>
</nlog>